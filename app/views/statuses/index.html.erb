<div class="page-header">
  <h1>What catz are saying meow...</h1>
  <%= link_to "Meow Moar", new_status_path, class: "btn btn-info right-align" %>
</div>

<div class="row">

  <div class="span8">

  <% @statuses.each do |status| %>

    <div class="status">
      <div class="row">
        <div class="span1">
           <%= image_tag status.user.gravatar_url %>
        </div>

        <div class="span6">
          <strong><%= status.user.full_name + " said:" %></strong>
          <p><%= status.content %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
            <span class="admin">
              | <%= link_to "Edit", edit_status_path(status) %> | 
              <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this?"} %>
            </span>
          </div>
        </div>
      </div>
    </div>  



<% end %>
  </div>
  <div class="span4">

    <%= image_tag("cat2.jpeg", :alt => "cats typing", :class => 'cat') %>

  </div>
</div>
